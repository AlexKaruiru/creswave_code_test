<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.posts.mapper.BlogMapper">
  
  <insert id="saveBlog" parameterType="com.posts.model.BlogModel">
    INSERT INTO blog (user_id, title, content)
    VALUES (#{userId}, #{title}, #{content})
  </insert>

  <update id="updateBlog" parameterType="com.posts.model.BlogModel">
    UPDATE blog
    SET title = #{title}, content = #{content}
    WHERE blog_id = #{blogId}
  </update>

  <delete id="deleteBlog" parameterType="long">
    DELETE FROM blog
    WHERE blog_id = #{blogId}
  </delete>

  <select id="findAllBlogs" resultType="com.posts.model.BlogModel">
    SELECT *
    FROM blog
  </select>

  <select id="findBlogById" parameterType="long" resultType="com.posts.model.BlogModel">
    SELECT *
    FROM blog
    WHERE blog_id = #{blogId}
  </select>

  <insert id="saveComment" parameterType="com.posts.model.CommentModel">
    INSERT INTO comment (blog_id, user_id, content)
    VALUES (#{blogId}, #{userId}, #{content})
  </insert>

  <update id="updateComment" parameterType="com.posts.model.CommentModel">
    UPDATE comment
    SET content = #{content}
    WHERE comment_id = #{commentId}
  </update>

  <delete id="deleteComment" parameterType="long">
    DELETE FROM comment
    WHERE comment_id = #{commentId}
  </delete>

  <select id="findCommentById" parameterType="long" resultType="com.posts.model.CommentModel">
    SELECT *
    FROM comment
    WHERE comment_id = #{commentId}
  </select>

  <select id="findAllCommentsByBlogId" parameterType="long" resultType="com.posts.model.CommentModel">
    SELECT *
    FROM comment
    WHERE blog_id = #{blogId}
  </select>

  <delete id="deleteAllCommentsByBlogId" parameterType="long">
    DELETE FROM comment
    WHERE blog_id = #{blogId}
  </delete>

</mapper>
